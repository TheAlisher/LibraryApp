<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.main.BookDescriptionFragment">

    <ImageView
        android:id="@+id/image_bookDescription_book"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/contentDescription_bookDescription_image_book" />

    <TextView
        android:id="@+id/text_bookDescription_name"
        style="@style/BookNameStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_bookDescription_author"
        style="@style/BookAuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_bookDescription_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/Gray"
        android:textSize="13sp" />


</LinearLayout>